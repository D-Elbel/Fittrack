extends layout

block content
  .container
    .nav.nav-pills.nav-fill 
      li.nav-item 
        a(href="workouts").nav-link.active Workouts
      li.nav-item
      li.nav-item
      li.nav-item 
        a(href="login").nav-link Login         
      li.nav-item 
        a(href="/").nav-link Register
  
  .row
    .col-xl-3
      select.form-select    
        option Please Select a Muscle Group
        option Biceps 
        option Brachialis 
        option Triceps 
        option Quadriceps 
        option Deltoids 
        option Hamstrings 

    .col-xl-4 
        input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')
    .col-xl-1
     button.btn.btn-primary Search
    .col-xl-4
     
  each workout in workouts   
   .card.workoutCard
    .card-body 
      .row
        .col-lg-8
          h5.card-title= workout.title
        .col-lg-4.muscleList
          each tag in workout.tags
            .badge.badge-primary= tag
      .row
       each exercise in workout.exercises
        .col-lg-4
          .card.exerciseCard
            .row
              .col-lg-12
                p.exerciseComponent=exercise.name
            .row            
              p.exerciseComponent=exercise.sets
                span.fieldLabel | Sets           
              i.fas.fa-times           
              p.exerciseComponent=exercise.reps
                span.fieldLabel | Reps
              p.exerciseComponent=exercise.rest
                span.fieldLabel | KG
              p.exerciseComponent=exercise.resistance
                span.fieldLabel | Seconds

        